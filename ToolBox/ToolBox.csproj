<Project Sdk="Microsoft.NET.Sdk" >
    <PropertyGroup>
        <!-- Base version (e.g., 1.0.0-preview) -->
        <VersionBase>1.0.0-preview</VersionBase>

        <!-- Generate the build date dynamically -->
        <BuildDate>$([System.DateTime]::Now.ToString("yyyyMMddHHmmss"))</BuildDate>

        <!-- Full version with the build date -->
        <Version>$(VersionBase)-$(BuildDate)</Version>
    </PropertyGroup>
</Project>
